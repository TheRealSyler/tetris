{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",

    "outDir": "./dist",
    "rootDir": "./src",

    "strict": false,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,

    "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noImplicitReturns": true,

    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "dist",
    "src/test",
    "./webpack.config.ts"
  ]
}
